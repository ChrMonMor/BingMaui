<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingMaui.Views.GyroscopePage"
             Title="GyroscopePage">
    <Grid>
        <Label x:Name="gyrolabel"
               FontSize="24"/>
        <AbsoluteLayout>
            <!-- Rotatable and Movable Square -->
            <Frame x:Name="rotatingSquare"
                   WidthRequest="150"
                   HeightRequest="150"
                   CornerRadius="0"
                   VerticalOptions="Start"
                   HorizontalOptions="Start"
                   HasShadow="False">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop 
                            Color="Yellow"
                            Offset="0.0" />
                        <GradientStop 
                            Color="Red"
                            Offset="0.25" />
                        <GradientStop 
                            Color="Blue"
                            Offset="0.75" />
                        <GradientStop 
                            Color="LimeGreen"
                            Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>
            </Frame>
        </AbsoluteLayout>
    </Grid>
</ContentPage>